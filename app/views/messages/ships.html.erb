<div class="row">
	      <br/>
      <br/>
      <br/>
      <br/>
      <br/>
	<div class="col-sm-2">
	</div>
	<div class="col-sm-8">
	    <div class="panel panel-primary">
	          <div class="panel-heading">
	                <h4 class="panel-title">Ships</h4>
	          </div>
	          <div class="panel-body">
	                  <p id="notice"><%= notice %></p>

	                  <table class="table table-hover">
	                    <thead>
	                      <tr>
	                        <th>MMSI</th>
	                        <th>Number Of Messages</th>
	                        <th>Last Location</th>
	                        <th>Last message received on</th>
	                        <th colspan="1"></th>
	                      </tr>
	                    </thead>

                            <tbody>
                              <% @ships.each do |ship| %>
                                <tr>
                                  <td><%= ship %></td>
                                  <td><%= Message.where(mmsi: ship).count %></td>
                                  <td></td>
                                  <td></td>
                                  <td><%= link_to 'Show', :action => "ships_show", :id => ship %></td>

                                 </tr>
                              <% end %>
                            </tbody>
                          </table>
                          <%= paginate @ships %>
	          </div>
	      </div>         
	<div class="col-sm-2">
	</div>
</div>



